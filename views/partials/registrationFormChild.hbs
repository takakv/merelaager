{{#times 4}}
  <div class="registration-form__unit is-hidden">
    <div class="registration-form__close"></div>
    <div class="registration-form__row has-after">
      <div class="registration-form__field">
        <label for="name-{{this}}" class="u-required">Nimi</label>
        <input type="text" name="name" id="name-{{this}}" class="nameField"/>
      </div>
      <div class="registration-form__field">
        <label for="idCode-{{this}}" class="u-required">Isikukood</label>
        <input
          type="text"
          name="idCode"
          id="idCode-{{this}}"
          class="idCodeField"
          pattern="[0-9]{11}"
        />
      </div>
      <div class="registration-form__field is-hidden">
        <p class="u-required">Sugu:</p>
        <label for="gender-m-{{this}}">Poiss</label>
        <input
          type="radio"
          name="gender"
          id="gender-m-{{this}}"
          value="M"
          class="genderField"
        />
        <label for="gender-f-{{this}}">Tüdruk</label>
        <input type="radio" name="gender" id="gender-f-{{this}}" value="F"/>
      </div>
      <div class="registration-form__field is-hidden">
        <label for="bDay-{{this}}" class="u-required">Sünnipäev</label>
        <input
          type="date"
          name="bDay"
          id="bDay-{{this}}"
          class="birthdayField"
        />
      </div>
    </div>
    <div class="registration-form__row registration-form__row--minor">
      <div class="registration-form__field registration-form__field--row">
        <label for="useIdCode-{{this}}">Pole Eesti isikukoodi</label>
        <input
          type="checkbox"
          name="useIdCode"
          id="useIdCode-{{this}}"
          class="useIdCode"
          value="{{this}}"
        />
      </div>
    </div>
    <div class="registration-form__row has-after">
      <div class="registration-form__field">
        <label for="vahetus-{{this}}" class="u-required">Laagrivahetus</label>
        <select id="vahetus-{{this}}" class="shiftField" name="shiftNr">
          <option value="">--Valige vahetus--</option>
          <option value="1">1. vahetus (26.06–07.07)</option>
          <option value="2">2. vahetus (10.07–21.07)</option>
          <option value="3">3. vahetus (24.07–04.08)</option>
          <option value="4">4. vahetus (07.08–18.08)</option>
        </select>
      </div>
      <div class="registration-form__field">
        <label for="shirtsize-{{this}}" class="u-required">T-särgi suurus</label>
        <select id="shirtsize-{{this}}" class="shirtSizeField" name="tsSize">
          <option value="">--Valige suurus--</option>
          <option value="118/128">118/128</option>
          <option value="130/140">130/140</option>
          <option value="142/152">142/152</option>
          <option value="152/164">152/164</option>
          <option value="M">M</option>
          <option value="L">L</option>
          <option value="XL">XL</option>
        </select>
      </div>
      <div class="registration-form__field registration-form__field--row">
        <label for="newcomer-{{this}}">Esimest korda merelaagris?</label>
        <input
          type="checkbox"
          name="newcomer[]"
          id="newcomer-{{this}}"
          class="newField"
          value="{{this}}"
          checked
        />
      </div>
    </div>
    <p>Elukoht:</p>
    <div class="registration-form__row">
      <div class="registration-form__field">
        <label for="road-{{this}}" class="u-required">Tänav</label>
        <input type="text" name="road" id="road-{{this}}" class="roadField"/>
      </div>
      <div class="registration-form__field">
        <label for="city-{{this}}" class="u-required">Linn / Küla / Vald</label>
        <input type="text" name="city" id="city-{{this}}" class="cityField"/>
      </div>
      <div class="registration-form__field">
        <label for="county-{{this}}" class="u-required">Maakond</label>
        <input
          list="counties"
          id="county-{{this}}"
          name="county"
          class="countyField"
        />
        <datalist id="counties">
          <option value="Harju"></option>
          <option value="Tartu"></option>
          <option value="Ida-Viru"></option>
          <option value="Pärnu"></option>
          <option value="Lääne-Viru"></option>
          <option value="Viljandi"></option>
          <option value="Rapla"></option>
          <option value="Võru"></option>
          <option value="Saare"></option>
          <option value="Jõgeva"></option>
          <option value="Järva"></option>
          <option value="Valga"></option>
          <option value="Põlva"></option>
          <option value="Lääne"></option>
          <option value="Hiiu"></option>
        </datalist>
      </div>
      <div class="registration-form__field">
        <label for="country-{{this}}" class="u-required">Riik</label>
        <input
          type="text"
          name="country"
          id="country-{{this}}"
          value="Eesti"
          class="countryField"
        />
      </div>
    </div>
    <div class="registration-form__row">
      <div class="registration-form__field registration-form__field--full">
        <label for="addendum-{{this}}">Muu info (allergiad, erivajadused jms):</label>
        <textarea
          name="addendum"
          id="addendum-{{this}}"
          class="full-width"
          placeholder="Võib tühjaks jääda (maksimum 255 tähemärki)."
          maxlength="255"
        ></textarea>
      </div>
    </div>
  </div>
{{/times}}