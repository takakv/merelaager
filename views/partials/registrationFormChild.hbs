{{#times 4}}
    <div class="registration-form__unit is-hidden">
        <div class="registration-form__close"></div>
        <div class="registration-form__row has-after">
            <div class="registration-form__field">
                <label for="name-{{this}}" class="u-required">Nimi</label>
                <input type="text" name="name-{{this}}" id="name-{{this}}" class="nameField">
            </div>
            <div class="registration-form__field">
                <label for="idCode-{{this}}" class="u-required">Isikukood</label>
                <input type="text" name="idCode-{{this}}" id="idCode-{{this}}" class="idCodeField"
                       pattern="[5-6]{1}[00-20]{2}(0[1-9]|1[0-2])(0[1-9]|[12][0-9]|3[01])[0-9]{4}">
            </div>
            <div class="registration-form__field is-hidden">
                <p class="u-required">Sugu:</p>
                <label for="gender-m-{{this}}">Poiss</label>
                <input type="radio" name="gender-{{this}}" id="gender-m-{{this}}" value="M" class="genderField">
                <label for="gender-f-{{this}}">Tüdruk</label>
                <input type="radio" name="gender-{{this}}" id="gender-f-{{this}}" value="F">
            </div>
            <div class="registration-form__field is-hidden">
                <label for="bDay-{{this}}" class="u-required">Sünnipäev</label>
                <input type="date" name="bDay-{{this}}" id="bDay-{{this}}" class="birthdayField">
            </div>
        </div>
        <div class="registration-form__row registration-form__row--minor">
            <div class="registration-form__field registration-form__field--row">
                <label for="useIdCode-{{this}}">Ei soovi registreerida isikukoodiga</label>
                <input type="checkbox" name="useIdCode-{{this}}" id="useIdCode-{{this}}" class="useIdCode"
                       value="false">
            </div>
        </div>
        <div class="registration-form__row has-after">
            <div class="registration-form__field">
                <label for="vahetus-{{this}}" class="u-required">Laagrivahetus</label>
                <select id="vahetus-{{this}}" class="shiftField" name="vahetus-{{this}}">
                    <option value="">--Valige vahetus--</option>
                    <option value="1v">I vahetus</option>
                    <option value="2v">II vahetus</option>
                    <option value="3v">III vahetus</option>
                    <option value="4v">IV vahetus</option>
                </select>
            </div>
            <div class="registration-form__field">
                <label for="shirtsize-{{this}}" class="u-required">T-särgi suurus</label>
                <select id="shirtsize-{{this}}" class="shirtSizeField" name="shirtsize-{{this}}">
                    <option value="">--Valige suurus--</option>
                    <option value="118/128">118/128</option>
                    <option value="130/140">130/140</option>
                    <option value="142/152">142/152</option>
                    <option value="152/164">152/164</option>
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                </select>
            </div>
            <div class="registration-form__field registration-form__field--row">
                <label for="newAtCamp-{{this}}">Esimest korda merelaagris?</label>
                <input type="checkbox" name="newAtCamp-{{this}}" id="newAtCamp-{{this}}" class="newField" value="true"
                       checked>
            </div>
        </div>
        <div class="registration-form__row registration-form__row--minor">
            <div class="registration-form__field registration-form__field--row emsa-field">
                <label for="emsa-{{this}}">EMSA laagritoetus</label>
                <input type="checkbox" name="emsa-{{this}}" id="emsa-{{this}}" class="isEmsa"
                       value="true">
            </div>
        </div>
        <p>Elukoht:</p>
        <div class="registration-form__row">
            <div class="registration-form__field">
                <label for="road-{{this}}" class="u-required">Tänav</label>
                <input type="text" name="road-{{this}}" id="road-{{this}}" class="roadField">
            </div>
            <div class="registration-form__field">
                <label for="city-{{this}}" class="u-required">Linn</label>
                <input type="text" name="city-{{this}}" id="city-{{this}}" class="cityField">
            </div>
            <div class="registration-form__field">
                <label for="country-{{this}}" class="u-required">Riik</label>
                <input type="text" name="country-{{this}}" id="country-{{this}}" value="Eesti" class="countryField">
            </div>
        </div>
        <div class="registration-form__row">
            <div class="registration-form__field registration-form__field--full">
                <label for="addendum-{{this}}">Muu info (allergiad, erivajadused jms):</label>
                <textarea name="addendum-{{this}}" id="addendum-{{this}}" class="full-width"
                          placeholder="Võib tühjaks jääda (maksimum 255 tähemärki)." maxlength="255"></textarea>
            </div>
        </div>
    </div>
{{/times}}
