<div id="auth-key" class="is-hidden">{{ key }}</div>
{{#unless boss}}
    <div>
        <p><b>Poisse:</b> {{data.boyCount }}</p>
        <p><b>Tüdrukuid:</b> {{ data.girlCount }}</p>
        <p><b>Kokku:</b> {{data.totalCount }}</p>
    </div>
{{/unless}}
<table class="c-camper-table">
    <tr>
        <th>Reg ID</th>
        <th>Registreeritud?</th>
        <th>Nimi</th>
        <th>Isikukood</th>
        <th>Sugu</th>
        <th>Sünnipäev</th>
        <th>Vana olija?</th>
        <th>Vahetus</th>
        <th>Tsärgi suurus</th>
        <th>Linn / küla / vald</th>
        <th>Maakond</th>
        <th>Arve nr</th>
        <th>Kontakt</th>
        <th>Bronnitasu</th>
        <th>Laagritasu</th>
    </tr>
    {{#unless boss}}
        {{#each campers}}
            <tr>
                <td>{{ this.id }}</td>
                <td>{{ this.registered }}</td>
                <td>{{this.name}}</td>
                <td style="font-family: monospace">{{ this.idCode }}</td>
                <td>{{ this.gender }}</td>
                <td style="font-family: monospace">{{ this.bDay }}</td>
                <td>{{ this.isOld }}</td>
                <td>{{ this.shift }}</td>
                <td>{{ this.tShirtSize }}</td>
                <td>{{ this.city }}</td>
                <td>{{ this.county }}</td>
                <td style="font-family: monospace">{{ this.billNr }}</td>
                <td>{{ this.contact }}</td>
                <td class="{{ this.prePaid.class }}">{{ this.prePaid.name }}</td>
                <td class="{{ this.fullPaid.class }}">{{ this.fullPaid.name }}</td>
            </tr>
        {{/each}}
    {{/unless}}
    {{#if boss}}
        {{#each campers}}
            <tr>
                <td>{{ this.id }}</td>
                <td>{{ this.registered }}</td>
                <td>{{this.name}}</td>
                <td style="font-family: monospace">{{ this.idCode }}</td>
                <td>{{ this.gender }}</td>
                <td style="font-family: monospace">{{ this.bDay }}</td>
                <td>{{ this.isOld }}</td>
                <td>{{ this.shift }}</td>
                <td>{{ this.tShirtSize }}</td>
                <td>{{ this.city }}</td>
                <td>{{ this.county }}</td>
                <td style="font-family: monospace">{{ this.billNr }}</td>
                <td>{{ this.contact }}</td>
                <td>
                    <button id="{{ this.id }}a"
                            class="prePayment {{ this.prePaid.class }}">{{ this.prePaid.name }}</button>
                </td>
                <td>
                    <button id="{{ this.id }}b"
                            class="fullPayment {{ this.fullPaid.class }}">{{ this.fullPaid.name }}</button>
                </td>
            </tr>
        {{/each}}
    {{/if}}
</table>
