<section class="registration">
    <div class="o-container">
        <form class="registration-form" action="/broneeri/lisa/" method="post">
            <div class="registration-form__unit">
                <div class="registration-form__row">
                    <div class="registration-form__field">
                        <label for="name">Laagrilapse nimi</label>
                        <input type="text" name="name" id="name" required>
                    </div>
                    <div class="registration-form__field">
                        <label for="idcode">Isikukood</label>
                        <input type="text" name="idcode" id="idcode" required
                               pattern="[5-6]{1}[00-20]{2}(0[1-9]|1[0-2])(0[1-9]|[12][0-9]|3[01])[0-9]{4}">
                    </div>
                </div>
                <div class="registration-form__row">
                    <div class="registration-form__field">
                        <label for="vahetus">Laagrivahetus</label>
                        <select id="vahetus" required>
                            <option value="">--Valige vahetus--</option>
                            <option value="1v">I vahetus</option>
                            <option value="2v">II vahetus</option>
                            <option value="3v">III vahetus</option>
                            <option value="4v">IV vahetus</option>
                        </select>
                    </div>
                    <div class="registration-form__field">
                        <label for="shirtsize">T-s√§rgi suurus</label>
                        <select id="shirtsize" required>
                            <option value="">--Valige suurus--</option>
                            <option value="s1">118/128</option>
                            <option value="s2">130/140</option>
                            <option value="s3">142/152</option>
                            <option value="s4">152/164</option>
                            <option value="s5">S</option>
                            <option value="s6">M</option>
                            <option value="s7">L</option>
                            <option value="s8">XL</option>
                        </select>
                    </div>
                    <div class="registration-form__field">
                        <label for="hasIdCode">Ei soovi registreerida isikukoodiga</label>
                        <input type="checkbox" name="hasIdCode" id="hasIdCode" value="false">
                    </div>
                </div>
            </div>
            <div class="registration-form__unit">
                <p>Lisa laps +</p>
            </div>
            <h3>Kontaktisik</h3>
            <div class="registration-form__unit">
                <div class="registration-form__row">
                    <div class="registration-form__field">
                        <label for="guardian_name">Nimi</label>
                        <input type="text" name="guardian_name" id="guardian_name" required>
                    </div>
                    <div class="registration-form__field">
                        <label for="guardian_phone">Telefon</label>
                        <input type="tel" name="guardian_phone" id="guardian_phone" required>
                    </div>
                    <div class="registration-form__field">
                        <label for="guardian_email">Email</label>
                        <input type="email" name="guardian_email" id="guardian_email" required>
                    </div>
                </div>
                <div class="registration-form__row">
                    <div class="registration-form__field">
                        <label for="alt_phone">Varutelefon</label>
                        <input type="tel" name="alt_phone" id="alt_phone">
                    </div>
                </div>
            </div>
            <button name="submit" value="submit">Registreeri</button>
        </form>
    </div>
</section>